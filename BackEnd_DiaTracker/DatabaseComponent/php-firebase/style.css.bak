body{
    margin: 0;
    padding: 0;
    background:#fbcd08;
    background-size: cover;
    font-family: 'open sans',sans-serif;
}
/* Set the style of the box element that will contain the form */
.box{
	margin-top:100px;
    background: #1a1a1a;
    border-left: 10px solid #1a1a1a;
    border-right: 10px solid #1a1a1a;
    color: #fbcd08;
    top: 40%;
    left: 70%;
    position: absolute;
    transform: translate(-50%,-40%);
    box-sizing: border-box;
    padding: 55px 60px;
    border-radius: 10px;
}


/* Set the style of the user icon image element */
.user{
    width: 100px;
    height: 85px;
    position: absolute;
    top: -50px;
    left: calc(50% - 50px);
}
/* Set the style of the heading */
h1{
    margin: 0;
    padding: 0 0 50px;
    text-align: center;
    font-size: 28px;
    font-weight: 700;
    color: #fff;
}
/* Set the style of the labels */
p{
    color: #fbcd08;
    margin: 0;
    padding: 0;
    font-size: 21px;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
    margin-bottom: 10px;
}
/* Set the style of the input elements */
input{
    width: 100%;
    margin-bottom: 25px;
    padding: 10px;
}

/* Set the style of the text input, password input and email input */
input[type="text"], input[type="password"] ,input[type="email"]
{
    border: none;
    box-shadow: 0px 0px 15px -3px rgba(0,0,0,0.1);
    background: transparent;
    border-radius: 5px;
    outline: none;
    height: 30px;
    color: #EEE;
    font-size: 16px;
    font-weight: 600;
}

/* Set the style of the submit button */
input[type="submit"]
{
    font-weight: 600;
    border: none;
    outline: none;
    height: 40px;
    background: #fbcd08;
    color: #fff;
    font-size: 18px;
    border-radius: 20px;
    
}
h5 {
    margin-top: 10px;
    margin-bottom: 0;
    padding: 0 0 0px;
    text-align: center;
    font-size: 25px;
    font-weight: 700;
    color: black;
}
.error {
   border: 1px solid #ff0000;
   background-color: #ffe6e6;
   padding: 10px;
   margin-bottom: 10px;
   color: #ff0000;
   font-family: 'open sans', sans-serif;
   text-align: center;
}

.container {
    color: black;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    padding: 55px 60px;
    border-radius: 8px;
    background-color: white;
}

.card-header {
    background-color: gray;
    color: #fff;
    padding: 10px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.card-body {
    padding: 5px;
    background-color: gray;
}

.form-group-mb-3 label {
    color: #dc3545;
    font-weight: gray;
}

.form-control {
    border: none;
    width: 320px;
    margin: 0 auto;
    display: block;
    border-radius: 20px;
    box-shadow: none;
    border-bottom: 2px solid #6c757d;
}

.form-control:focus {
    border-color: black;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn-primary {
    background-color: black;
    border-color: black;
    color: white;
    font-weight: bold;
    width: 80%;
    border-radius: 50px;
    margin-top: 30px;
    margin-bottom: 0;
}

.btn-primary:hover {
    background-color: #fbcd08;
    border-color: black;
    color: black;
}

p {
    color: black;
    margin: 10% auto;
    padding: 0;
    font-size: 15px;
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
    margin-bottom: 10px;
    margin-top: 10px;
}

.alert-danger {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
    padding: .75rem 1.25rem;
    margin-bottom: 1rem;
    border: 1px solid transparent;
    border-radius: .25rem;
}

/* Set the style of the submit button when hovered */
input[type=submit]:hover{
    box-shadow: 0 0 20px #fddd4e;
    color: #1a1a1a;
    transition: 400ms;
    cursor: pointer;
}
/* Set the style of the link */
a
{
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    line-height: 20px;
    color: #069818;
}
.login:hover{
    transition: 200ms;
}
/* Set the style of the link when hovered */
a:hover
{
    color:#fbcd08;
}
.mainbox{
    position: absolute;
    top: 40%;
    left: 25%;
    transform: translate(-50%,-40%);
    box-sizing: border-box;
    padding: 55px 60px;
    border-radius: 8px;
}